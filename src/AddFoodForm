import { useState } from "react";

function AddFood(props) {
  const [name, setName] = useState("");
  const [calories, setCalorie] = useState("");
  const [image, setImage] = useState(5);
  const [servings, setServings] = useState(true);

  //FOCO: Funcion manejadora, cambia el state con el estado actual del input

  const setNameInput = (e) => {
    setName(e.target.value);
  };

  const setCalorieInput = (e) => {
    setCalorie(e.target.value);
  };
  const setImageInput = (e) => {
    setImage(e.target.value);
  };
  const setServingsInput = (e) => {
    setServings(e.target.value);
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    const newFood = {
     name:name,
      calories: calories,
      image: image,
      serving: serving
    };

    //console.log("Submitted", newFood);
    props.addFood(newFood);

    // Reset the state
    setName("");
    setCalorie("");
    setImage("");
    setServings("");
  };

  return (
    <div className="AddFood">
      <h4>Add a Movie</h4>
      <form onSubmit={handleSubmit}>
        <label>Name:</label>
     
        <input
          type="text"
          name="title"
          value={name}
          onChange={(e) => setNameInput(e.target.value)}
        />

        <label>Calories:</label>
        <input
          type="number"
          name="calories"
          value={calories}
          onChange={(e) => setCalorieInput(e.target.value)}
        />

        <label>Servings:</label>
        <input
          type="number"
          name="servings"
          value={servings}
          onChange={(e) => setImageInput(e.target.value)}
        />

        <label>Image:</label>
        <input
           type="text"
          name="image"
          value={image}
          onChange={(e) => setServingsInput(e.target.checked)}
        />
        <button type="submit">Add a Food</button>
      </form>
    </div>
  );
}

export default AddFood;